{
  "name": "HASS Tunnel",
  "version": "0.0.2",
  "slug": "hass_tunnel",
  "description": "Automatically connect to a ssh server for forwarding ports",
  "url": "https://github.com/odinuge/hassio-addons",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "map": ["config:rw"],
  "options": {
    "hostname": "",
    "ssh_port": "22",
    "username": "autossh",
    "remote_forwarding": ["127.0.0.1:8123:172.17.0.1:8123"],
    "local_forwarding": [""],
    "other_ssh_options": "-v",
    "monitor_port": "0"
  },
  "schema": {
    "hostname": "str",
    "ssh_port": "int",
    "username": "str",
    "remote_forwarding": ["str"],
    "local_forwarding": ["str"],
    "other_ssh_options": "str",
    "monitor_port": "int"
  },
  "image": "pjcarly/hassio-addon-autossh-{arch}"
}
